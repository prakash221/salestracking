@model IEnumerable<Model.DistributorsModel>

@{
    ViewBag.Title = "Index";
}

<h2 class="pl-3">List of Distributors </h2>
<div class="border-top border-dark my-1"></div>
<p class="pl-5 pt-2" >
    @Html.ActionLink("Add New", "Create",null , new { @class = "btn btn-primary" })
</p>
<table class="table pl-3">
    <tr>
        <th class="d-none">
            @Html.DisplayNameFor(model => model.DistributorId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DistributorName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.State)
        </th>
        <th class="d-none">
            @Html.DisplayNameFor(model => model.DistrictId)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.DistictName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Address)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Phone)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.MobileNo)
        </th>
        <th colspan="2">Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td class="d-none">
            @Html.DisplayFor(modelItem => item.DistributorId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DistributorName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.State)
        </td>
        <td class="d-none">
            @Html.DisplayFor(modelItem => item.DistrictId)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DistictName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Address)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.MobileNo)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new {  id=item.DistributorId } , new { @class = "btn btn-success" }) 
        </td>
        <td>
            @Html.ActionLink("Delete", "Delete", new { id = item.DistributorId }, new { @class = "btn btn-danger" })
        </td>
    </tr>

}

</table>
<div class="border-top border-dark my-1"></div>
